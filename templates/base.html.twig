<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Doces da Madra{% endblock %}</title>
        {% block stylesheets %}
            <link href="/assets/css/materialize.css" rel="stylesheet">
            <link href="/assets/css/main.css" rel="stylesheet">
            <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
            {#<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">#}
            {#<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>#}
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <div class="hero-image">
                <div class="hero-text">
                    <h1 style="font-size:50px"><a class="white-text" href="{{ path('default') }}"> Doces da Madra </a></h1>
                    {% if not is_granted('ROLE_LOGADO') %}
                        <a href="{{ path('cadastrar_usuario') }}" class="btn blue list-point">Cadastre-se</a>
                        <br>
                        <br>
                        <a href="{{ path('app_login') }}" class="white-text">ou entre na sua conta para fazer um pedido</a>
                    {% endif %}
                </div>
            </div>

            <nav>
                {% if not is_granted('ROLE_LOGADO') %}
                    <div class="nav-wrapper blue">
                        <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                        <ul id="nav-mobile" class="right hide-on-med-and-down">
                            <li><a href="{{ path('default') }}"> Início </a></li>
                        </ul>
                    </div>

                    <ul class="sidenav" id="mobile-demo">
                        <li><a href="{{ path('default') }}"> Início </a></li>
                    </ul>
                {% else %}
                    <div class="nav-wrapper blue">
                        <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                        {#<a href="#" class="brand-logo">Doces da Madra</a>#}
                        <ul id="nav-mobile" class="right hide-on-med-and-down">
                            <li><a href="{{ path('default') }}"> Início </a></li>
                            {% if is_granted('ROLE_ADMIN') %}
                                <li><a href="{{ path('cadastro_produto') }}">Cadastrar Produto</a></li>
                            {% endif %}
                            {#{% if not is_granted('ROLE_LOGADO') %}#}
                                {#<li><a href="{{ path('cadastrar_usuario') }}">Cadastrar Usuário</a></li>#}
                            {#{% endif %}#}
                            {% if is_granted('ROLE_USER') %}
                                <li><a href="{{ path('carrinho') }}">Carrinho</a></li>
                            {% endif %}
                            {% if is_granted('ROLE_ADMIN') %}
                                <li><a href="{{ path('pedidos_admin') }}">Pedidos</a></li>
                            {% endif %}
                            {% if is_granted('ROLE_USER') %}
                                <li><a href="{{ path('pedidos_user') }}">Pedidos</a></li>
                            {% endif %}
                            {% if not is_granted('ROLE_LOGADO') %}
                            <li><a href="{{ path('app_login') }}">Entrar</a></li>
                            {% endif %}
                            {% if is_granted('ROLE_LOGADO') %}
                                <li><a href="{{ path('app_logout') }}">Sair</a></li>
                            {% endif %}
                        </ul>
                    </div>

                    <ul class="sidenav" id="mobile-demo">
                        <li><a href="{{ path('default') }}"> Início </a></li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li><a href="{{ path('cadastro_produto') }}">Cadastrar Produto</a></li>
                        {% endif %}
                        {#{% if not is_granted('ROLE_LOGADO') %}#}
                        {#<li><a href="{{ path('cadastrar_usuario') }}">Cadastrar Usuário</a></li>#}
                        {#{% endif %}#}
                        {% if is_granted('ROLE_USER') %}
                            <li><a href="{{ path('carrinho') }}">Carrinho</a></li>
                        {% endif %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <li><a href="{{ path('pedidos_admin') }}">Pedidos</a></li>
                        {% endif %}
                        {% if is_granted('ROLE_USER') %}
                            <li><a href="{{ path('pedidos_user') }}">Pedidos</a></li>
                        {% endif %}
                        {% if not is_granted('ROLE_LOGADO') %}
                            <li><a href="{{ path('app_login') }}">Entrar</a></li>
                        {% endif %}
                        {% if is_granted('ROLE_LOGADO') %}
                            <li><a href="{{ path('app_logout') }}">Sair</a></li>
                        {% endif %}
                    </ul>
                {% endif %}
            </nav>

        {% endblock %}

        <div class="container content">
            {% block body %}
            {% endblock %}
        </div>

        {% block javascripts %}
            {#<script src="{{ asset('js/menu-mobile.js') }}"></script>#}
            {#<script src="{{ asset('js/materialize.js') }}"></script>#}


            <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
            <script type="text/javascript" src="/assets/js/menu-mobile.js"></script>
            <script type="text/javascript" src="/assets/js/materialize.js"></script>

        {% endblock %}
    </body>
</html>